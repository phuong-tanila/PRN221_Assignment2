@page
@model PhuongNH_SE150997_BikeShop.Pages.CreateProductModel
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- font awesome -->
    <script defer src="https://kit.fontawesome.com/330a21053c.js" crossorigin="anonymous"></script>
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">

    <link rel="stylesheet" href="/css/dashboardMain.css">
    <link rel="stylesheet" href="/css/createPage.css">
    <title>Create Product</title>
</head>

<body>
    <div class="left_side">
        <div class="nav_bar">

            <div class="logo">
                <img src="/image/coffee-logo-design-creative-idea-logo-elements-2.png" alt="">
            </div>
            <div class="nav_container">
                <!-- item navigation-->
                <div class="nav_item active">
                    <a href="#">
                        <i class="fa-solid fa-house" style="color: #d1d3d7;"></i>
                    </a>
                </div>

                <!-- item navigation -->
                <div class="nav_item">
                    <a href="#">
                        <i class="fa-solid fa-list-check" style="color: #d1d3d7;"></i>
                    </a>

                </div>
            </div>
            <div>
                <div class="nav_item">
                    <a href="#">
                        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #d1d3d7;"></i>
                    </a>

                </div>

            </div>
        </div>
    </div>
    <div class="right_side">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- <div class="input_box"> -->
            <div class="input_group">
                <label asp-for="ProductModel.ProductName">Name</label>
                <input asp-for="ProductModel.ProductName" id="name_input">
                <span asp-validation-for="ProductModel.ProductName" class="text-danger"></span>
            </div>
            <div class="input_group">
                <label asp-for="ProductModel.BrandId">Brand</label>
                <select asp-for="ProductModel.BrandId" asp-items="ViewBag.BrandId" ></select>
            </div>
            <div class="input_group">
                <label asp-for="ProductModel.CategoryId">Category</label>
                <select asp-for="ProductModel.CategoryId" asp-items="ViewBag.CategoryId" ></select>
            </div>
            <div class="input_group">
                <label asp-for="ProductModel.ModelYear" for="">Model Year</label>
                <input asp-for="ProductModel.ModelYear" id="year_input" type="text">
               
            </div>
            <div class="input_group">
                <label asp-for="ProductModel.ListPrice" for="price_input">Price</label>
                <input asp-for="ProductModel.ListPrice" id="price_input" type="text">
               

            </div>
            <div class="input_group" style="display: flex;justify-content: center;flex-direction: column;align-items: center;">
                <button type="submit" id="update" value="Create">Create</button>
            </div>
        </form>
    </div>
</body>
<script src="/js/dashboardMainHandleEvent.js"></script>

</html>
